<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>Tp1TLC</servlet-name>
		<servlet-class>com.istic.tlc.tp1.Tp1TLCServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Tp1TLC</servlet-name>
		<url-pattern>/tp1tlc</url-pattern>
	</servlet-mapping>
	<servlet>
        <servlet-name>sign</servlet-name>
        <servlet-class>com.istic.tlc.tp1.SignGuestbookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sign</servlet-name>
        <url-pattern>/sign</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addAds</servlet-name>
        <servlet-class>com.istic.tlc.tp1.AddAdsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addAds</servlet-name>
        <url-pattern>/addAds</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>searchAds</servlet-name>
        <servlet-class>com.istic.tlc.tp1.SearchAdsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchAds</servlet-name>
        <url-pattern>/searchAds</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteAds</servlet-name>
        <servlet-class>com.istic.tlc.tp1.DeleteAdsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteAds</servlet-name>
        <url-pattern>/deleteAds</url-pattern>
    </servlet-mapping>
	<welcome-file-list>
		<welcome-file>ads.jsp</welcome-file>
	</welcome-file-list>
</web-app>
